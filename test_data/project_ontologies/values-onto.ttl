@prefix xsd:         <http://www.w3.org/2001/XMLSchema#> .

<http://www.knora.org/ontology/0001/values>
        rdf:type                        owl:Ontology;
        rdfs:label                      "The values ontology";
        knora-base:attachedToProject    <http://rdfh.ch/projects/0001>;
        knora-base:lastModificationDate "2017-12-19T15:23:42.166Z"^^xsd:dateTime .

v:Resource  
        rdf:type          owl:Class;
        rdfs:comment             "Resource class that may hold all kinds of values"@de;
        rdfs:label               "Resource Class"@en;
        rdfs:subClassOf knora-base:Resource ,
                        [ rdf:type             owl:Restriction;
                         salsah-gui:guiOrder  "10"^^xsd:nonNegativeInteger;
                         owl:minCardinality   "0"^^xsd:nonNegativeInteger;
                         owl:onProperty       v:hasInteger
                        ] ,
                        [ rdf:type             owl:Restriction;
                         salsah-gui:guiOrder  "10"^^xsd:nonNegativeInteger;
                         owl:minCardinality   "0"^^xsd:nonNegativeInteger;
                         owl:onProperty       v:hasUnformattedText
                        ] .

v:hasInteger
        rdf:type                          owl:ObjectProperty;
        rdfs:label                        "Integer"@en;
        rdfs:subPropertyOf                knora-base:hasValue;
        knora-base:objectClassConstraint  knora-base:IntValue;
        knora-base:subjectClassConstraint v:Resource;
        salsah-gui:guiAttribute           "min=0" , "max=-1";
        salsah-gui:guiElement             salsah-gui:Spinbox .
                
v:hasUnformattedText
        rdf:type                          owl:ObjectProperty;
        rdfs:label                        "Unformatted Text"@en;
        rdfs:subPropertyOf                knora-base:hasValue;
        knora-base:objectClassConstraint  knora-base:UnformattedTextValue;
        knora-base:subjectClassConstraint v:Resource.

