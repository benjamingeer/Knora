<http://www.knora.org/ontology/literature>
	a owl:Ontology;
	dct:title "An ontology about literature"@en;
	dct:description """Formal description of literature, its general subclasses, related classes and properties."""@en;
	dct:creator "Hans Cools, software developer, NIE-INE, Basel University, Switzerland"@en;
	dct:contributor "Roberta Padlina, NIE-INE, Basel University, Switzerland"@en;
	dct:publisher "Basel University, Switzerland"@en.

#
# CLASSES
#

litera:Literature
	a owl:Class;
	rdfs:label "literature"@en, "Literatur"@de;
	rdfs:comment """Written text as art."""@en;
	rdfs:subClassOf text:WrittenText. #* NOT an expression -> features?

litera:Fiction
	a owl:Class;
	rdfs:label "literary fiction"@en, "literarische Fiktion"@de;
	rdfs:comment """Literature having content derived from imagination."""@en;
	rdfs:subClassOf litera:Literature, concept:Fiction.

litera:NonFiction
	a owl:Class;
	rdfs:label "literary non-fiction"@en, "sachliche Literatur"@de;
	rdfs:comment """Literature having content based on fact."""@en;
	rdfs:subClassOf litera:Literature, concept:NonFiction.

litera:Poetry
	a owl:Class;
	rdfs:label "poetry"@en, "Poetik"@de; # Poesie
	rdfs:comment """Literature expressing emotion and imagination directly in text structure with e.g. prosody, besides content."""@en; # reflexive
	rdfs:subClassOf litera:Literature.

litera:LyricPoetry
	a owl:Class;
	rdfs:label "lyric poetry"@en, "lyrische Poetik"@de;
	rdfs:comment """Literature expressing emotion and imagination directly in text structure with e.g. prosody, besides content."""@en; # reflexive
	rdfs:subClassOf litera:Poetry.

# litera:NarrativePoetry

#* litera:DescriptivePoetry rdfs:subClassOf litera:Poetry. # didactic or demonstrative

#* litera:ScientificPoetry rdfs:subClassOf litera:DescriptivePoetry.

litera:Narrative
	a owl:Class;
	rdfs:label "narrative"@en, "Narration"@de; # synonyms: prose - Prosa, different from the structural prose text:Prose
	rdfs:comment """Storytelling literature."""@en;
	rdfs:subClassOf litera:Literature.

#* litera:Epic: + heroism

#* litera:Drama - Dramatik # +- performing/ dialogical sequences

litera:Poem
	a owl:Class;
	rdfs:label "poem"@en, "Gedicht"@de;
	rdfs:comment """Poetic expression."""@en, """Poetische Expression."""@de; #* lyric expression
	rdfs:subClassOf text:Expression, litera:Lyric.

litera:VersePoem
	a owl:Class;
	rdfs:label "verse poem"@en, "Versgedicht"@de;
	rdfs:comment """Poem expressed in verse."""@en, """Gedicht ausgedruckt in Vers."""@de;
	rdfs:subClassOf litera:Poem, [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:allValuesFrom text:Verse], [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:minCardinality "0"^^xsd:nonNegativeInteger], [
		a owl:Restriction; owl:onProperty text-structure:hasStructureValue; owl:minCardinality "0"^^xsd:nonNegativeInteger].

litera:Hymn
	a owl:Class;
	rdfs:label "hymn"@en, "Hymne"@de, "hymnus"@la;
	rdfs:comment """Poetic expression of adoration for a deity or prominent person."""@en;
	rdfs:subClassOf litera:VersePoem. #* OR song

# litera:Hymnal # OR hymn book # collection of hymns

litera:ProsePoem
	a owl:Class;
	rdfs:label "prose poem"@en, "Prosagedicht"@de;
	rdfs:comment """Poem written in prose."""@en, """Gedicht in Prosa geschrieben."""@de;
	rdfs:subClassOf litera:Poem, [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:allValuesFrom text:Prose], [ # OR text:RhythmicProse
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:minCardinality "0"^^xsd:nonNegativeInteger], [
		a owl:Restriction; owl:onProperty text-structure:hasStructureValue; owl:minCardinality "0"^^xsd:nonNegativeInteger].

litera:EpicPoem #  litera:Epic
	a owl:Class;
	rdfs:label "verse novel"@en, "Versroman"@de; #* Versepos
	rdfs:comment """Narrative fiction expression in verse and with novel-length about heroism."""@en.
#*	rdfs:subClassOf ? # litera:VerseNovel.


litera:VerseNovel
	a owl:Class;
	rdfs:label "verse novel"@en, "Versroman"@de; #* Versepos
	rdfs:comment """Narrative fiction expression in verse and with novel-length."""@en;
	rdfs:subClassOf text:Expression, litera:Narrative, litera:Fiction, [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:allValuesFrom text:Verse], [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:minCardinality "0"^^xsd:nonNegativeInteger], [
		a owl:Restriction; owl:onProperty text-structure:hasStructureValue; owl:minCardinality "0"^^xsd:nonNegativeInteger].

litera:Novel
	a owl:Class;
	rdfs:label "novel"@en, "Roman"@de;
	rdfs:comment """Narrative fiction expression."""@en;
	rdfs:subClassOf text:Expression, litera:Narrative, litera:Fiction, [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:allValuesFrom text:Prose], [
		a owl:Restriction; owl:onProperty text-structure:hasStructure; owl:minCardinality "0"^^xsd:nonNegativeInteger], [
		a owl:Restriction; owl:onProperty text-structure:hasStructureValue; owl:minCardinality "0"^^xsd:nonNegativeInteger].

# litera:NonFictionNovel eg https://www.britannica.com/art/nonfiction-novel

