<?xml version="1.0" encoding="UTF-8"?>

<!-- diplomatic version -->

<xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="2.0">

    <xsl:output method="html" encoding="utf-8" indent="yes"/>

    <xsl:template match="region">
        <div>
            <xsl:choose>
                <xsl:when test="@border">
                    <xsl:attribute name="class"><xsl:value-of select="@border"/></xsl:attribute>
                </xsl:when>
            </xsl:choose>
            <xsl:apply-templates/>
        </div>
    </xsl:template>

    <xsl:template match="regionref">
      <a>
        <xsl:attribute name="class">salsah-link</xsl:attribute>
        <xsl:attribute name="href"><xsl:value-of select="@href"/></xsl:attribute>
        <xsl:apply-templates/>
      </a>
    </xsl:template>

    <xsl:template match="formula">
        <span class="math">
            <xsl:choose>
                <xsl:when test="@border">
                    <xsl:attribute name="class"><xsl:value-of select="@border"/></xsl:attribute>
                </xsl:when>
            </xsl:choose>
            \(<xsl:apply-templates/>\)</span>
    </xsl:template>

    <xsl:template match="rendition[@class='center']">
        <span>
            <xsl:attribute name="class">center</xsl:attribute>
            <xsl:apply-templates/>
        </span>
    </xsl:template>

    <xsl:template match="rendition[@class='underline']">
        <span>
            <xsl:attribute name="class">underline</xsl:attribute>
            <xsl:apply-templates/>
        </span>
    </xsl:template>

    <xsl:template match="rendition[@class='strike']">
        <span>
            <xsl:attribute name="class">strike</xsl:attribute>
            <xsl:apply-templates/>
        </span>
    </xsl:template>

    <xsl:template match="rendition[@class='above']">
        <span>
            <xsl:attribute name="class">above</xsl:attribute>
            <xsl:apply-templates/>
        </span>
    </xsl:template>

    <xsl:template match="subst/substdel">
        <span>
            <xsl:attribute name="class">strike</xsl:attribute>
            <xsl:apply-templates/>
        </span>
    </xsl:template>

    <xsl:template match="subst/substadd">
        <xsl:apply-templates/>
    </xsl:template>

    <xsl:template match="gap">&#8249; &#8250;</xsl:template>

    <xsl:template match="unclear">[?]</xsl:template>

    <xsl:template match="foreign">
        <xsl:choose>
            <xsl:when test="@lang='German'">
                <span>
                    <xsl:attribute name="class">fraktur</xsl:attribute>
                    <xsl:apply-templates/>
                </span>
            </xsl:when>
            <xsl:otherwise>
                <xsl:apply-templates/>
            </xsl:otherwise>
        </xsl:choose>

    </xsl:template>

    <xsl:template match="lb"><br/></xsl:template>

    <!-- table -->
    <xsl:template match="table">
        <table>
            <xsl:choose>
                <xsl:when test="@border">
                    <xsl:attribute name="class"><xsl:value-of select="@border"/></xsl:attribute>
                </xsl:when>
            </xsl:choose>
            <xsl:apply-templates/>
        </table>
    </xsl:template>

    <!-- row -->
    <xsl:template match="table/row">
        <tr>
            <xsl:apply-templates/>
        </tr></xsl:template>

    <!-- cell: get all attributes: border and align -->
    <xsl:template match="table/row/cell">
        <td>
            <xsl:choose>
                <xsl:when test="@align">
                    <xsl:attribute name="class"><xsl:value-of select="@align"/>;</xsl:attribute>
                </xsl:when>
            </xsl:choose>
            <xsl:apply-templates/></td>
    </xsl:template>

</xsl:transform>